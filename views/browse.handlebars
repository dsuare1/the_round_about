{{!-- begin search sidebar section --}}
<aside id="search-sidebar">
	<h3>Browse by:</h3>
	<div class="search-form-control">
		<form action="/browse/all" method="GET">
			<button type="submit" id="search-all-submit" class="search-form-button">Browse All Items</button>
		</form>
	</div>
	
	<form action="/browse/search" method="GET" id="browse-options">

		<div class="search-form-control" id="format-container">
			<p id="format-label">Format:</p>
			<input type="radio" name="format" value="7" class="filter format-filter" />&nbsp;&nbsp;7''<br><br>
			<input type="radio" name="format" value="12" class="filter format-filter" />&nbsp;&nbsp;12''
		</div>

		<p id="genre-label">Genre:</p>
		<div class="search-form-control" id="radio-left">
			<input type="radio" name="genre" value="Blues" class="filter" />&nbsp;&nbsp;Blues<br><br>
			<input type="radio" name="genre" value="Comedy" class="filter" />&nbsp;&nbsp;Comedy<br><br>
			<input type="radio" name="genre" value="Country" class="filter" />&nbsp;&nbsp;Country<br><br>
			<input type="radio" name="genre" value="Electronic" class="filter" />&nbsp;&nbsp;Eletronic<br><br>
			<input type="radio" name="genre" value="Emo" class="filter" />&nbsp;&nbsp;Emo<br><br>
			<input type="radio" name="genre" value="Folk" class="filter" />&nbsp;&nbsp;Folk<br><br>
			<input type="radio" name="genre" value="Funk" class="filter" />&nbsp;&nbsp;Funk<br><br>
			<input type="radio" name="genre" value="Indie" class="filter" />&nbsp;&nbsp;Indie
		</div>

		<div class="search-form-control" id="radio-right">
			<input type="radio" name="genre" value="Jazz" class="filter" />&nbsp;&nbsp;Jazz<br><br>
			<input type="radio" name="genre" value="Pop" class="filter" />&nbsp;&nbsp;Pop<br><br>
			<input type="radio" name="genre" value="Punk" class="filter" />&nbsp;&nbsp;Punk<br><br>
			<input type="radio" name="genre" value="Reggae" class="filter" />&nbsp;&nbsp;Reggae<br><br>
			<input type="radio" name="genre" value="Rap" class="filter" />&nbsp;&nbsp;Rap<br><br>
			<input type="radio" name="genre" value="Rock" class="filter" />&nbsp;&nbsp;Rock<br><br>
			<input type="radio" name="genre" value="Soul" class="filter" />&nbsp;&nbsp;Soul<br><br>
			<input type="radio" name="genre" value="Soundtrack" class="filter" />&nbsp;&nbsp;Soundtrack
		</div>

		{{!-- <div class="search-form-control">
			<p id="price-label">Price:</p>
			<input type="radio" name="price" value=""
		</div> --}}

		<div class="search-form-control" id="filter-submit-button-container">
			<button type="submit" id="search-submit" class="search-form-button">Search</button>
			<button type="reset" id="clear-filters" class="search-form-button">Clear Filters</button>
		</div>

	</form>
</aside>
{{!-- end search sidebar section --}}

{{!-- begin search results section --}}
<section id="search-results">
	{{#each albums}}
		<div class="search-result-item">
			<img src="{{this.imgURL}}" width="125px" height="125px" class="search-results-album-cover" alt="Album Cover">
			<form action="/browse/{{this.id}}" method="GET" id="specific-album-form">
				<input type="submit" class="search-results-album-title single-album-input" value="{{this.title}}"/><br>
				<input type="submit" class="search-results-artist single-album-input" value="{{this.artist}}"/><br>
				<input type="submit" class="search-results-year single-album-input" value="{{this.year}}"/><br>
				<input type="submit" class="search-results-price single-album-input" value="${{this.price}}" style="color: #f1c40f;"/>
			</form>
		</div>
	{{/each}}

	{{#unless albums}}
	<div class="no-results-message-container">
		<p class="no-results-message">{{this.message}}</p>
	</div>
	{{/unless}}
</section>
{{!-- end search results section --}}

