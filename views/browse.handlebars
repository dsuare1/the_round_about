{{!-- begin search sidebar section --}}
<aside id="search-sidebar">
	<h3>Browse by:</h3>
	<div class="search-form-control">
		<form action="/browse/all" method="GET">
			<button type="submit" id="search-all-submit" class="search-form-button">Browse All Items</button>
		</form>
	</div>
	
	<form action="/browse/search" method="GET" id="browse-options">
		
		<div class="search-form-control">
			<p>Condition:</p>
			<input type="radio" name="condition" value="new" class="filter">&nbsp;&nbsp;New</input><br><br>
			<input type="radio" name="condition" value="used" class="filter">&nbsp;&nbsp;Used</input>
		</div>

		<div class="search-form-control">
			<p>Format:</p>
			<input type="radio" name="format" value="33" class="filter">&nbsp;&nbsp;33"</input><br><br>
			<input type="radio" name="format" value="45" class="filter">&nbsp;&nbsp;45"</input>
		</div>

		<div class="search-form-control">
			<p>Genre:</p>
			<input type="radio" name="genre" value="rock" class="filter">&nbsp;&nbsp;Rock</input><br><br>
			<input type="radio" name="genre" value="pop" class="filter">&nbsp;&nbsp;Pop</input><br><br>
			<input type="radio" name="genre" value="indie" class="filter">&nbsp;&nbsp;Indie</input><br><br>
			<input type="radio" name="genre" value="punk" class="filter">&nbsp;&nbsp;Punk</input>
		</div>

		<div class="search-form-control">
			<button type="submit" id="search-submit" class="search-form-button">Search</button>
			<button type="reset" id="clear-filters" class="search-form-button">Clear Filters</button>
		</div>

	</form>
</aside>
{{!-- end search sidebar section --}}

{{!-- begin search results section --}}
<section id="search-results">
	{{#each albums}}
	<div class="search-result-item">
		<img src="{{this.imgURL}}" width="125px" height="125px" class="search-results-album-cover">
		<p class="search-results-album-title">{{this.title}}</p>
		<p class="search-results-artist">{{this.artist}}</p>
		<p class="search-results-year">{{this.year}}</p>
	</div>
	{{/each}}
</section>
{{!-- end search results section --}}

