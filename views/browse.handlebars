{{!-- begin search results section --}}
<section id="search-results">

{{#if inStockAlbums}}
	{{#each inStockAlbums}}
		<div class="search-result-item">
			<img src="{{this.albumCover}}" width="125px" height="125px" class="search-results-album-cover" alt="Album Cover">
			<form action="/browse/{{this.id}}" method="GET" id="specific-album-form">
				<p class="search-results-album-title">{{this.title}}</p>
				<p class="search-results-artist">{{this.artist}}</p>
				<p class="search-results-year">{{this.year}}</p>
				<p class="search-results-quantity">Quantity: {{this.quantity}}</p>
				<p class="search-results-price">${{this.price}}</p>
				<button type="submit" class="view-album-details-button">View album details</button>
			</form>
		</div>
	{{/each}}
{{/if}}

	{{#each albums}}
		<div class="search-result-item">
			<img src="{{this.albumCover}}" width="125px" height="125px" class="search-results-album-cover" alt="Album Cover">
			<form action="/browse/{{this.id}}" method="GET" id="specific-album-form">
				
				<p class="search-results-album-title">{{this.title}}</p>
				<p class="search-results-artist">{{this.artist}}</p>
				<p class="search-results-year">{{this.year}}</p>
				<p class="search-results-quantity">Quantity: {{this.quantity}}</p>
				<p class="search-results-price">${{this.price}}</p>
				<button type="submit" class="view-album-details-button">View album details</button>
			</form>
		</div>
	{{/each}}

	{{#unless albums}}
	<div class="no-results-message-container">
		<p class="no-results-message">{{this.message}}</p>
	</div>
	{{/unless}}
</section>
{{!-- end search results section --}}

